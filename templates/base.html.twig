<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}MétéoExpress{% endblock %}</title>
        <link href="{{ asset('css/style.css') }}" rel="stylesheet">
        <link rel="icon" href="{{ asset('favicon.png') }}" type="image/x-icon" />
        {% block stylesheets %}
            <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
    <nav class="navbar navbar-dark sticky-top navbar-expand-lg">
        <div class="container-fluid ">
            <a class="navbar-brand btn" href="{{ path('app_home_index') }}">Accueil</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    {% if is_granted('IS_AUTHENTICATED_FULLY')%}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('app_address_show') }}">Liste d'emplacements favoris</a>
                        </li>
                    {% if is_granted('ROLE_ADMIN') %}
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="{{ path('admin') }}">Panneau d'administration</a>
                        </li>
                    {% endif %}
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link" href="{{ path('app_home_about') }}">A propos</a>
                    </li>
                </ul>
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a href="{{ path('app_logout') }}" class="btn btn-danger">Déconnexion de {{ app.user.firstname ?? 'Anonymous user' }}</a>
                {% endif %}
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
    </body>
</html>
